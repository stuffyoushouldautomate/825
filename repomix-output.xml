        description: "Invitation sent successfully",
      });
      
      setInvited(true);
      setInviteEmail("");
    } catch (error: any) {
      toast({
        title: "Error",
        description: error.message || "Failed to send invite",
        variant: "destructive",
      });
    } finally {
      setInviting(false);
    }
